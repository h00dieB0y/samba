# ----------------------------------------
# Application Settings
# ----------------------------------------
APP_NAME=somba-api
APP_ENV=development    # Can be development, staging, production
APP_PORT=8081
APP_SECRET_KEY=SuperSecretKeyChangeMe   # Used for JWT, encryption

# ----------------------------------------
# PostgreSQL Database Config
# ----------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_USER=somba_postgres_user
DB_PASSWORD=StrongSombaPostgresPass123!
DB_NAME=somba_db

# ----------------------------------------
# MongoDB Config (NoSQL)
# ----------------------------------------
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_INITDB_ROOT_USERNAME=somba_mongo_user
MONGO_INITDB_ROOT_PASSWORD=StrongSombaMongoPass123!
MONGO_DB=somba_catalog

# ----------------------------------------
# Docker Config
# ----------------------------------------
DOCKER_NETWORK=somba_network

# ----------------------------------------
# Adminer (Database Admin Panel)
# ----------------------------------------
ADMINER_PORT=8080

# ----------------------------------------
# API Versioning
# ----------------------------------------
API_VERSION=v1

# ----------------------------------------
# Server Config (Optional - Deployment)
# ----------------------------------------
SERVER_HOST=localhost
SERVER_PORT=8081
SERVER_ENABLE_SSL=false
SERVER_CORS_ORIGIN=*

